@model MvcKutuphaneSistemi.Models.Entity.Uyeler
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayoutPanel.cshtml";
}
<br />
<h2>Kütüphane Üye Profil Bilgileri</h2>

@using (Html.BeginForm("Index2", "Panelim", FormMethod.Post))
{
    <table class="table table-hover">
        <tr>
            <td>
                <label style="font-weight:bolder"> E-mail Adersi: </label>
                @HttpContext.Current.User.Identity.Name
            </td>
        </tr>

        <tr>
            <td>
                <label style="font-weight:bolder"> Öğrenci ID:</label>
                @Html.TextBoxFor(x => x.UyeID, new { @class = "form-control" })
            </td>
        </tr>

        <tr>
            <td>
                <label style="font-weight:bolder"> Ad:</label>
                @Html.TextBoxFor(x => x.UyeAD, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder"> Soyad:</label>
                @Html.TextBoxFor(x => x.UyeSoyad, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder"> Kullanıcı Adı:</label>
                @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder"> Şifre:</label>
                @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder"> Üye Fotoğraf:</label>
                @Html.TextBoxFor(x => x.Fotograf, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder"> Okul:</label>
                @Html.TextBoxFor(x => x.OkulAD, new { @class = "form-control" })
            </td>
        </tr>

        <tr>
            <td>
                <button class="btn btn-warning">Bilgilerimi Güncelle</button>
            </td>
        </tr>
    </table>
}
