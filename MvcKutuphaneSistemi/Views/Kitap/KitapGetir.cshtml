@model MvcKutuphaneSistemi.Models.Entity.Kitaplar
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<br />
@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div>
        <label>Kitap İD</label>
        @Html.TextBoxFor(k => k.KitapID, new { @class = "form-control" })
        <br />
        <label>Kitap Adı</label>
        @Html.TextBoxFor(k => k.KitapAD, new { @class = "form-control" })
        <br />
        <label>Kategori</label>
        @Html.DropDownListFor(k => k.Kategoriler.KategoriID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        <br />
        <label>Kitap Yazar</label>
        @Html.DropDownListFor(k => k.Yazarlar.YazarID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
        <br />
        <label>Basım Yılı</label>
        @Html.TextBoxFor(k => k.BasimYili, new { @class = "form-control" })
        <br />
        <label>Yayın Evi</label>
        @Html.TextBoxFor(k => k.YayinEvi, new { @class = "form-control" })
        <br />
        <label>Sayfa Sayısı</label>
        @Html.TextBoxFor(k => k.Sayfa, new { @class = "form-control" })

    </div>
    <div style="margin-top:15px;">
        <button class="btn btn-warning">Kitap Bilgilerini Güncelle</button>
    </div>
    <input type="hidden" value="true" name="Durum" />
}

